<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    tools:context=".view.ShowStudentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Student Id :-"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/etShowId"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Student Name :-"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etShowName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Student Email :-"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etShowEmail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Student Standard :-"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/etShowStandard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Student Password :-"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etShowPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp">
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="0dp"
        android:text="Update"
        android:layout_weight="1"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:text="Delete"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>