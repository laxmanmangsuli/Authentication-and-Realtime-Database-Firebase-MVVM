<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.signup.StudentSignUpActivity">

    <EditText
        android:id="@+id/etAdminName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/admin_name"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"/>

    <EditText
        android:id="@+id/etAdminEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Admin Email"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:hint="Admin Password"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/btnAdminAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/save"
        android:layout_marginHorizontal="30dp"/>



</LinearLayout>